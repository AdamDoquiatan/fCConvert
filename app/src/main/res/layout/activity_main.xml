<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:id="@+id/convLines"
        android:layout_width="368dp"
        android:layout_height="245dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:columnCount="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <android.support.v7.widget.GridLayout
            android:id="@+id/line0"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:tag="0"
            app:columnCount="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/icon0"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:onClick="openCurrencyDrawer"
                app:srcCompat="@android:color/holo_blue_bright" />

            <TextView
                android:id="@+id/lineText0"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:onClick="selectLine"
                android:paddingRight="10dp"
                android:tag="0"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

        </android.support.v7.widget.GridLayout>

        <android.support.v7.widget.GridLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:tag="1"
            app:columnCount="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:onClick="openCurrencyDrawer"
                app:srcCompat="@android:color/holo_green_light" />

            <TextView
                android:id="@+id/lineText1"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:onClick="selectLine"
                android:paddingRight="10dp"
                android:tag="1"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

        </android.support.v7.widget.GridLayout>

        <android.support.v7.widget.GridLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:tag="2"
            app:columnCount="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:onClick="openCurrencyDrawer"
                app:srcCompat="@android:color/holo_purple" />

            <TextView
                android:id="@+id/lineText2"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:onClick="selectLine"
                android:paddingRight="10dp"
                android:tag="2"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

        </android.support.v7.widget.GridLayout>

        <android.support.v7.widget.GridLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:tag="3"
            app:columnCount="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="90dp"
                android:layout_height="match_parent"

                android:onClick="openCurrencyDrawer"
                app:srcCompat="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/lineText3"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:onClick="selectLine"
                android:paddingRight="10dp"
                android:tag="3"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

        </android.support.v7.widget.GridLayout>
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="300dp"
        android:layout_height="253dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="4">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enterVal"
            android:padding="0dp"
            android:text="7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="7"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enterVal"
            android:padding="0dp"
            android:text="8"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="8"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enterVal"
            android:padding="0dp"
            android:text="9"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="9"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enterVal"
            android:padding="0dp"
            android:text="4"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="4"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enterVal"
            android:padding="0dp"
            android:text="5"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="5"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enterVal"
            android:padding="0dp"
            android:text="6"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="6"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enterVal"
            android:padding="0dp"
            android:text="3"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enterVal"
            android:padding="0dp"
            android:text="2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enterVal"
            android:padding="0dp"
            android:text="1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enterVal"
            android:padding="0dp"
            android:text="0"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/buttonDec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enterVal"
            android:padding="0dp"
            android:text="."
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="."
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enterVal"
            android:padding="0dp"
            android:text="back"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="back"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

    </android.support.v7.widget.GridLayout>

    <ImageView
        android:id="@+id/closeDrawerTrigger"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="closeCurrencyDrawer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/currencyDrawer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/transparent" />

    <ScrollView
        android:id="@+id/currencyDrawer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:fillViewport="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:id="@+id/currencyDrawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"
            android:gravity="fill"
            android:orientation="vertical"
            android:visibility="visible">

        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>